<Page x:Class="DEMO.Windows.partnersCatalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEMO.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Каталог партнёров">

    <Border CornerRadius="30,0,0,30" Margin="10">
        <Grid Background="White">

            <!-- Панель для карточек партнеров с возможностью прокрутки -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="PartnersStackPanel"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch">
                    <!-- Карточки будут загружаться сюда -->
                </StackPanel>
            </ScrollViewer>

            
        </Grid>
    </Border>
</Page>